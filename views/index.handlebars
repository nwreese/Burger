<h1 class="header">Eat-Da-Burger!</h1>
<div class="center"> <img id="burgerPic" src="\assets\css\burger.png" alt="burger pic clip art"></div>
<h2>Food that hasn't been devoured!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devour=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2 class="devoured">Food that has been devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devour=false}}
  {{/if}}
  {{/each}}
</ul>
<div class="addFood">
<h2>Add something</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured!<br>
    <input type="radio" name="notDevoured" value="0" id="eatIt"> Not yet devoured!
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>